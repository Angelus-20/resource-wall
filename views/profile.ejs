<!DOCTYPE html>
<html lang="en">

<head>
  <title>profile</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/nav.css">

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/users.js"></script>
  <script defer src="/scripts/profile.js"></script>
</head>

<body>
  <!-- Top nav bar (fixed) -->
  <%- include('partials/header') %>
    <!-- Page-specific (main) content here -->
    <main>
      <div class="container bootstrap snippets bootdey">
        <h1 class="text-primary">Profile</h1>
        <hr>
        <div class="profile-column">
          <!-- image column -->
          <div>
            <div class="profile-pic">
              <img src="images/male-user.png" class="avatar img-circle img-thumbnail" alt="avatar">
            </div>
          </div>

          <!-- edit form column -->
          <div>
            <h3>
              Personal info
              <button class="btn btn-primary edit-btn">Edit</button>
            </h3>
            <form class="form-horizontal" role="form">
              <div class="data-row">
                <label>First name:</label>
                <span class="data-value" id="name-span">Alex</span>
                <input class="form-control hidden" id="name-input" type="text" value="Alex" style="display: none;"><br>
              </div>
              <div class="data-row">
                <label>Last name:</label>
                <span class="data-value" id="lastname-span">Jackson</span>
                <input class="form-control hidden" id="lastname-input" type="text" value="Jackson" style="display: none;"><br>
              </div>
              <div class="data-row">
                <label>Email:</label>
                <span class="data-value" id="email-span">jacksmail@gmail.com</span>
                <input class="form-control hidden" id="email-input" type="text" value="jacksmail@gmail.com" style="display: none;"><br>
              </div>
            </form>
          </div>
        </div>
      </div>
      <hr>
      <section class="favorites">
        <div>
          <placeholder>Favorites</placeholder>
        </div>
      </section>
    </main>
</body>

</html>