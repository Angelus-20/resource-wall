                <label class="col-lg-3 control-label">Last name:</label>
                <div class="col-lg-8">
                  <input class="form-control" type="text" value="Jackson">
                </div>
              </div>
              <div class="form-group">
                <label class="col-lg-3 control-label">Email:</label>
                <div class="col-lg-8">
                  <input class="form-control" type="text" value="jacksmail@gmail.com">
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
      <hr>
      <section class="favorites">
        <div>
          <placeholder>Favorites</placeholder>
        </div>
